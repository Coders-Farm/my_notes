<resources>
    <style name="Theme.MyNotes" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="BaseTextTheme" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/gowunbatang_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TextView.Bold.16.Black" parent="BaseTextTheme">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/gowunbatang_bold</item>
    </style>

    <style name="TextView.Regular.14.Black" parent="BaseTextTheme">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>